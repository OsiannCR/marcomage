{
    "name" : "marcomage",
    "description" : "MArcomage - free multiplayer on-line fantasy card game",
    "license" : "GNU General Public License",
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "Arcomage"
    },

    "require": {
        "php": "^5.6 || ^7.0",
        "jbbcode/jbbcode": "^1.3",
        "google/recaptcha": "^1.1"
    },

    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },

    "autoload": {
        "classmap": [
            "src/", "library/", "tests/", "vendor/"
        ],
        "psr-0": {
            "" : ["src/", "library/", "tests/"]
        }
    }
}
